type Order {
    id: ID!
    productId: ID!
    quantity: Int!
    status: String!
}

type Query {
    orders: [Order]!
    order(id: ID!): Order
}

type Mutation {
    createOrder(productId: ID!, quantity: Int!, status: String!): Order
    updateOrder(id: ID!, productId: ID, quantity: Int, status: String): Order
    deleteOrder(id: ID!): Boolean
}
